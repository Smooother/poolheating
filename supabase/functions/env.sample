# Tuya API Configuration
# Copy this file to .env and fill in your actual values

# Tuya API Base URL (EU region)
TUYA_BASE_URL=https://openapi.tuyaeu.com

# Tuya API Credentials (from your Tuya IoT project)
TUYA_CLIENT_ID=your_tuya_client_id
TUYA_CLIENT_SECRET=your_tuya_client_secret

# Tuya User ID (your account UID)
UID=your_tuya_uid

# Device ID to monitor
DEVICE_ID=your_device_id

# Supabase Configuration
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key

# Polling Configuration (optional)
POLL_MINUTES=2

# Example values (replace with your actual credentials):
# TUYA_CLIENT_ID=dn98qycejwjndescfprj
# TUYA_CLIENT_SECRET=21c50cb2a91a4491b18025373e742272
# UID=your_uid_here
# DEVICE_ID=bf65ca8db8b207052feu5u
# SUPABASE_URL=https://bagcdhlbkicwtepflczr.supabase.co
# SUPABASE_SERVICE_ROLE_KEY=your_service_role_key_here
